{% extends 'base.html.twig' %}

{% block title %}Evento{% endblock %}

{% block body %}
    <h1>Evento</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evento.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ evento.nombre }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ evento.fecha ? evento.fecha|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ evento.foto }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ evento.descripcion }}</td>
            </tr>
            <tr>
                <th>Localizacion</th>
                <td>{{ evento.localizacion }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('evento_index') }}">back to list</a>

    <a href="{{ path('evento_edit', {'id': evento.id}) }}">edit</a>

    {{ include('evento/_delete_form.html.twig') }}
{% endblock %}
